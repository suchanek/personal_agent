# Docker-specific environment configuration for Personal Agent Dashboard
# This file contains environment variables optimized for Docker container execution

# User configuration
USER_ID=dashboard_user

# Directory mappings (container paths)
PERSAG_HOME=/app/.persag
PERSAG_ROOT=/app/shared_data
HOME_DIR=/home/dashboard
DATA_DIR=/app/data
ROOT_DIR=/app/personal_agent_project

# Service URLs (using host.docker.internal to connect to host services)
LIGHTRAG_URL=http://host.docker.internal:9621
LIGHTRAG_MEMORY_URL=http://host.docker.internal:9622
OLLAMA_URL=http://host.docker.internal:11434

# LLM Configuration
LLM_MODEL=qwen3:1.7b
PROVIDER=ollama

# Storage backend
STORAGE_BACKEND=agno

# Logging
LOG_LEVEL=INFO

# Feature flags
USE_WEAVIATE=false
USE_MCP=true

# Streamlit configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Timeout configurations
HTTPX_TIMEOUT=7200
HTTPX_CONNECT_TIMEOUT=600
HTTPX_READ_TIMEOUT=7200
HTTPX_WRITE_TIMEOUT=600
HTTPX_POOL_TIMEOUT=600

OLLAMA_TIMEOUT=7200
OLLAMA_KEEP_ALIVE=3600
OLLAMA_NUM_PREDICT=16384
OLLAMA_TEMPERATURE=0.4

LLM_TIMEOUT=7200
EMBEDDING_TIMEOUT=3600

# Display configuration
SHOW_SPLASH_SCREEN=false
